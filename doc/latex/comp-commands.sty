\newcommand{\myShabox}{%
	\setlength{\sdim}{6pt}
}

%-----------------
% myOpdracht
%-----------------
\newcommand{\myOpdracht}[1]{%
	\ \newline 
	\begin{center}
		\shabox{ 
			\parbox{12cm}{ \large 
				\begin{itemize}
					\item #1
				\end{itemize}
			}
		}
	\end{center}
}

